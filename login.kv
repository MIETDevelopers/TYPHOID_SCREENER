<FirstPage>:
    name: "first_page"

    orientation: "vertical"

    MDLabel:
        text: "Disclaimer"
        font_style: 'H5'
        pos_hint:{'center_x':0.8,'center_y':0.8}   
        
    MDLabel:
        text: "Welcome to Mboalab! \n This app is by no means a substitue of a established diagnostic procedures"
        halign: "center"    
    Predict:
        name: "predictTyphoid"
        id: "predictTypoid"    
    MDRectangleFlatButton:
        text: "Next"
        theme_text_color: "Custom"
        text_color: 0, 0, 1, 1
        line_color: 0, 0, 1, 1
        theme_icon_color: "Custom"
        icon_color: 0, 0, 1, 1
        valign: "center"
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        spacing: None
        on_press:                    
            root.manager.current = "second_page"        
            
  

<SecondPage>:
    name: "second_page"    

        # Show login page #2
   
    orientation: 'vertical'
        
    MDTextFieldRound:
        id: user
        icon_left: "account-check"
        hint_text: "Name"
        foreground_color: 1, 0, 1, 1
        size_hint_x: None
        width: 220
        font_size: 20
        pos_hint: {"center_x": 0.5,"center_y": 0.6}
    MDTextFieldRound:
        id: password
        icon_left: "key-variant"
        hint_text: "Password"
        foreground_color: 1, 0, 1, 1
        size_hint_x: None
        width: 220
        font_size: 20            
        pos_hint: {"center_x": 0.5,"center_y": 0.5}
        password: True
    MDRectangleFlatButton:
        text: "LOG IN"
        font_size: 15
        theme_text_color: "Custom"
        text_color: 0, 0, 1, 1
        pos_hint: {"center_x": 0.5,"center_y": 0.3}
        on_press: app.Login()
    MDRectangleFlatButton:
        text: "SIGN UP"
        font_size: 15
        theme_text_color: "Custom"
        text_color: 0, 0, 1, 1
        pos_hint: {"center_x": 0.5,"center_y": 0.2}
        on_press: root.manager.current = "third_page"   
     

